/* components/book/index.wxss */
.container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 0 3px 0 #999;
  margin-bottom: 30rpx;
}

.img {
  width: 250rpx;
  height: 360rpx;
  bottom: 5rpx;
  border-top-right-radius: 5rpx;
  border-top-left-radius: 5rpx;
}

.content {
  display: flex;
  flex-direction: column;
  height: 120rpx;
  width: 210rpx;
  background-color: white;
  position: absolute;
  bottom: 0rpx;
  padding: 20rpx;
}

.title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
}

.text {
  font-size: 20rpx;
  color: #999;
  letter-spacing: 3rpx;
}

.point {
  width: 5rpx;
  height: 5rpx;
  border-radius: 50%;
  background-color: gray;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.foot {
  margin-top: 20rpx;
  display: inline-flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
