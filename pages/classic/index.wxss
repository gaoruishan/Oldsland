/* pages/classic/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.date-time {
  margin-left: 30rpx;
}

.movie {
  width: 100%;
}

.navi {
  position: absolute;
  bottom: 40rpx;
}

.share-icon {
  width: 80rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.share {
  /* padding:10rpx; */
  width: 40rpx;
  height: 40rpx;
}

.header-right {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
