/* pages/me/index.wxss */

Page {
  background: #eee;
}

.container {
  display: flex;
  flex-direction: column;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head-bg {
  width: 100%;
  height: 560rpx;
}

.head-avatar {
  position: absolute;
  top: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  overflow: hidden;
}

.about {
  display: flex;
  width: 50%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.head-about {
  margin-bottom: 15rpx;
  width: 45rpx;
  height: 45rpx;
}

.head-info {
  position: absolute;
  top: 420rpx;
  display: flex;
  width: 100%;
  flex-direction: row;
}

.course {
  position: absolute;
  right: 30rpx;
  top: 50rpx;
  width: 90rpx;
  height: 90rpx;
}

.like-icon {
  position: relative;
  height: 42rpx;
  margin: 10rpx auto;
  width: 97rpx;
}

.book-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0 30rpx;
}

.book-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 30rpx;
}
