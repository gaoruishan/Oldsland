/* pages/book/detail/index.wxss */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head {
  margin: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head-image {
  width: 200rpx;
  height: 310rpx;
  box-shadow: 0 0 3px 0 #999;
}

.title {
  margin-top: 15rpx;
  font-size: 38rpx;
  font-weight: bold;
  letter-spacing: 3rpx;
}

.author {
  color: #999;
}

.comments {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-top: 24rpx solid #eee;
}

.comments-title {
  text-align: center;
  font-weight: bold;
  font-size: 34rpx;
  margin: 12rpx;
}

.comment-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-top: 24rpx solid #eee;
}

.content-text {
  letter-spacing: 3rpx;
  text-indent: 50rpx;
  color: #999;
  margin: 10rpx 60rpx 30rpx 60rpx;
}

.book-info {
  display: flex;
  flex-direction: column;
  width: 100%;
  border-top: 24rpx solid #eee;
  margin-bottom: 90rpx;
}

.book-info-text {
  letter-spacing: 3rpx;
  color: #999;
  margin: 0rpx 60rpx;
}

.bottom-alert {
  width: 100%;
  display: flex;
  height: 220rpx;
  position: fixed;
  flex-direction: column;
  bottom: 85rpx;
  z-index: 99;
  border-top: 1px solid #eee;
  background-color: #fff;
}

.bottom-btn {
  height: 80rpx;
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.bottom-btn text {
  font-size: 32rpx;
  padding-right: 20rpx;
}

.bottom-comments {
  flex-direction: row;
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.bottom {
  flex-direction: row;
  display: inline-flex;
  background-color: #fff;
  position: fixed;
  bottom: 0rpx;
  z-index: 99;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  width: 100%;
  height: 85rpx;
  align-items: center;
  justify-content: space-between;
}

.bottom-left {
  display: flex;
  align-items: center;
  height: 60rpx;
  width: 410rpx;
  margin-left: 30rpx;
  border: 1px solid #999;
  border-radius: 30rpx;
  padding: 0rpx 30rpx;
}

.bottom-edit {
  height: 30rpx;
  width: 30rpx;
}

.bottom-input {
  width: 260rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.bottom-share {
  height: 36rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 36rpx;
}

.bottom-right {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.share {
  margin: 0 20rpx;
  width: 40rpx;
  height: 40rpx;
}
