/* pages/book/index.wxss */

page {
  background-color: #f8f8f8;
  margin-bottom: 10rpx;
}

.container {
  display: flex;
  flex-direction: column;
}

.header {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: white;
  align-items: center;
  position: fixed;
  z-index: 99;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.search-layout {
  height: 65rpx;
  width: 80%;
  background-color: #f8f8f8;
  border-radius: 33rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.icon-search {
  width: 36rpx;
  height: 36rpx;
}

.txt-search {
  font-size: 26rpx;
  color: #999;
  letter-spacing: 3rpx;
  margin-left: 10rpx;
}

.book-container {
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 120rpx 40rpx 20rpx 40rpx;
}

.book-img {
  text-align: center;
  width: 100%;
  margin: 10rpx 0;
}

.book-img image {
  width: 110rpx;
  height: 45rpx;
}

.book-cmp {
  display: flex;
  width: 50%;
  justify-content: center;
  align-items: center;
}
.ending{
  width: 100%;
  font-size: 26rpx;
  letter-spacing: 3rpx;
  color: #999;
  text-align: center;
}
